<div class="container">
  <div class="row">
    <div class="offset-2 col-8 col-sm-8 col-lg-8">
      <div class="card-product-show m-3 p-4">
        <div class="product-image">
      <h1><%= @product.title%></h1>
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%=cl_image_tag @product.photos.first.key, crop: :fill, class:"d-block w-100"%>
          </div>
          <div class="carousel-item">
            <%=cl_image_tag @product.photos.last.key, crop: :fill, class:"d-block w-100" %>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
      <div class="card-product-infos">
        <ul class="list-group list-group-flush mb-3">
          <li class="list-group-item"><i class="fa-solid fa-star-of-life"></i>   Marca: <%= @product.brand %></li>
          <li class="list-group-item"><i class="fa-solid fa-star-of-life"></i>   Color: <%= @product.color %></li>
          <li class="list-group-item"><i class="fa-solid fa-star-of-life"></i>   Talle: <%= @product.size %></li>
          <li class="list-group-item"><i class="fa-regular fa-person-half-dress"></i>   GÃ©nero: <%= @product.gender %></li>
          <li class="list-group-item"><i class="fa-solid fa-star-of-life"></i>   Usuario: <%= @product.user.username %></li>
        </ul>
      </div>
      <div class="d-flex justify-content-around">
        <a class="btn btn-primary" href="<%=new_product_booking_path(@product)%>" role="button">ALQUILAR</a>
        <%= link_to '<i class="fa-solid  fa-pen"></i>'.html_safe, edit_product_path(@product), class:"btn btn-primary mx-1" if @product.user == current_user %>
        <%= link_to '<i class="fa fa-trash"></i>'.html_safe, product_path(@product), class:"btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Seguro?"} if @product.user == current_user %>
        <%#= button_to "Destroy this produnct", @product, method: :delete if policy(@product).destroy? %>
      </div>
    </div>
  </div>
</div>
