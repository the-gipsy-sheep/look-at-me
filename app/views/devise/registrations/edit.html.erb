<div class="container offset-md-2">
<h2>Actualizar <%= resource_name.to_s.humanize %></h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs w-50">
    <%= f.input :email, label: "Correo electronico", required:  true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password,
                hint: "No completar si no desea actualizar",
                required: false,
                input_html: { autocomplete: "nueva contraseña" },
                label: "Contraseña" %>
    <%= f.input :password_confirmation,
                required: false,
                input_html: { autocomplete: "nueva contraseña" },
                label: "Confirmar Contraseña" %>
    <%= f.input :current_password,
                hint: "Es necesario repetir la contraseña para confirmar los cambios",
                required: true,
                input_html: { autocomplete: "current-password" },
                label: "Repetir Contraseña" %>
    <%= f.input :username,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "usuario" },
                label: "Usuario" %>
    <%= f.input :first_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "nombre" },
                label: "Nombre" %>
    <%= f.input :last_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "apellido" },
                label: "Apellido" %>
    <%= f.input :phone_number,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "telefono" },
                label: "Telefono" %>
    <%= f.input :address,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "direccion" },
                label: "Direccion" %>
    <%= f.input :photos, label: "Fotos", as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Actualizar", class: "btn-primary"%>
  </div>
<% end %>



<div class="d-flex align-items-center">
  <div>Disconforme?</div>
  <%= button_to "Cancelar Cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-link" %>
</div>

<%= link_to "Volver", :back %>
</div>
