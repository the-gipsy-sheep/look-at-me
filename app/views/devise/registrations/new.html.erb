<div class="container offset-md-2">

<h2>Registrarse</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs w-50">
    <div class="mb-3 align-items-center">
      <div class="col-auto">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  label: "Correo Electronico" %>
      </div>
      <div class="col-auto">
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "nueva contrase単a" },
                  label: "Contrase単a" %>
      </div>
      <div class="col-auto">
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "nueva contrase単a" },
                  label: "Repetir Contrase単a" %>
      </div>
      <div class="col-auto">
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "usuario" },
                  label: "Usuario",
                  hint: "min 6 caracteres"%>
      </div>
      <div class="col-auto">
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "nombre" },
                  label: "Nombre" %>
      </div>
      <div class="col-auto">
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "apellido" },
                  label: "Apellido" %>
      </div>
      <div class="col-auto">
      <%= f.input :phone_number,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "telefono" },
                  label: "Telefono" %>
      </div>
      <div class="col-auto">
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "direccion" },
                  label: "Direccion" %>
      </div>
      <%= f.input :photos, label: "Fotos", as: :file, input_html: { multiple: true } %>
      </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Registrarse", class: "btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
